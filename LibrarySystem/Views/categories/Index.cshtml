@model IEnumerable<LibrarySystem.Models.category>

@{
    ViewBag.Title = "Index";
}
<div style="text-align: center;">
    <img src="~/Images/Categories.png" alt="Login Image" width="1200" height="90" />
</div>
<h2>Category - الفئات</h2>

<p>
    @Html.ActionLink("إضافة فئة", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.catname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.catname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.status)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
